
#include "stdafx.h"
#include <iostream>
using namespace std;
 
int main()
{
    setlocale(LC_ALL, "rus"); // 
    double x; 
    cout << "ะด x:27 ";
    cin >> x;
 
    double yi = x, 
           yi1 = 0; 
 
    while 
    {
        yi1 = 0.5 * (yi + 3 * x / (2 * yi * yi + x / yi));
 
        if (abs(yi1 - yi) < pow(10.0, -5.0)) 
            break; 
 
        yi = yi1; 
    }
 
    cout << yi << endl;
 
    system("pause");
    return 0;
}
